# Diffs using diff-so-fancy
[color "diff"]
  meta = yellow bold
  old = red bold
[color "status"]
  changed = red bold
  untracked = red bold
[pager]
  diff = diff-so-fancy | less -RFX
  show = diff-so-fancy | less -RFX


[gui]
  historybrowser = gitg
  editor = leafpad
[cola]
  tabwidth = 2
  textwidth = 120
  spellcheck = false

[push]
  default = upstream

[stash]
  showPatch = true

[merge]
  tool = kdiff3
  renamelimit = 999999

[diff "odf"]
  binary = true
  textconv = odt2txt

[diff "cssmin"]
  wordRegex = "[^{};]+"

[diff]
  renameLimit = 32000
  wordRegex = [A-Za-z0-9_]+
